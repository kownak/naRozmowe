<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.japy.igorkownacki.japyzneta.MainActivity">

    <TextView
        android:id="@+id/text_plec"
        android:text="płeć"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/text_imie"
        android:layout_below="@id/text_plec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="imie nazwisko"
        android:textSize="25dp"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/image_japa"
        android:layout_below="@id/text_imie"
        android:layout_centerHorizontal="true"
        android:layout_width="128dp"
        android:layout_height="128dp" />
    <Button
        android:id="@+id/button_odswiez"
        android:text="ODSWIEŻ"
       android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
